# Server
NODE_ENV=development
PORT=3000

# Auth (JWT) - REQUIRED FOR PRODUCTION
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Database (PostgreSQL) - REQUIRED
# Supabase: Project Settings → Database → Connection string (URI or Transaction pooler)
# Neon / other: use the provided connection string
# For cloud Postgres with SSL, sslmode=require is recommended
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Optional: CORS origins (comma-separated). 
# Default: http://localhost:5173, http://localhost:3000, https://ticketing-wu55t.ondigitalocean.app
# CORS_ORIGIN=http://localhost:5173,https://myapp.vercel.app,https://ticketing-wu55t.ondigitalocean.app

